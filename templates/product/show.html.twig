{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">DÃ©tails du produit</h1>
        <div class="w-75 mx-auto">
            <table class="table border show-table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{ asset('uploads/brochures/' ~ product.image) }}" class="show-image"></td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ product.title }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex flex-row justify-content-center my-4">
                <a href="{{ path('app_product_index') }}" class="mx-3"><button class="btn btn-warning">Retour</button></a>
                <a href="#" class="card-link mx-3" title="Ajouter au panier">
                    <button class="btn btn-success"><i class="fa-solid fa-cart-plus"></i></button>
                </a>
            </div>

        </div>
    </div>

{% endblock %}
