{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="my-5">Liste de nos produits</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="{{ path('app_product_new') }}">
                    <button class="btn btn-success"><i class="fa-solid fa-plus"></i></i></button>
                </a>
            </div>
        </div>
        <div class="row">
            {% for product in products %}
                <div class="col-4">
                    <div class="card m-5" style="width: 18rem;">
                        <img src="{{ asset('uploads/brochures/' ~ product.image) }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title my-3 text-center">{{ product.title }}</h5>
                        </div>
                        <ul class="list-group list-group-flush d-flex flex-row justify-content-between">
                            <li class="list-group-item">Prix</li>
                            <li class="list-group-item">{{ product.price }} â‚¬</li>
                        </ul>
                        <div class="card-body d-flex flex-row justify-content-between">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" title="Afficher">
                                <button class="btn btn-primary"><i class="fa-solid fa-eye"></i></button></a>
                            <a href="#" class="card-link" title="Ajouter au panier">
                                <button class="btn btn-success"><i class="fa-solid fa-cart-plus"></i></button></a>
                        </div>
                    </div>
                </div>
            {% else %}
                    <div>no records found</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
